{
  "name": "acervo-digital-server",
  "version": "1.0.0",
  "description": "Backend API para Acervo Digital",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "npm run prisma:generate && tsc",
    "start": "node dist/index.js",
    "start:prod": "(npx prisma migrate deploy || echo 'Migration skipped') && node dist/index.js",
    "postinstall": "prisma generate",
    "migrate:bncc": "tsx scripts/migrate-bncc.ts",
    "seed": "tsx scripts/seed-database.ts",
    "prisma:generate": "prisma generate",
    "prisma:generate:fix": "npm config set strict-ssl false && prisma generate && npm config set strict-ssl true",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:fix": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:studio:fix": "npm config set strict-ssl false && prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "prisma": "^5.7.1",
    "sql.js": "^1.13.0",
    "typescript": "^5.3.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0"
  }
}
